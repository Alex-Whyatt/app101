<div class="container" style="padding-top: 200px;height:100%;padding-left: 75px;">
	<div class="container" style="width:25%;float:left;padding-left: 100px;padding-right:25px;padding-bottom:50px;text-align: center">
	  	<a class="nav-link" style="float:left;color: black;font-family: sans-serif;font-size: 16px;border: 2px solid black"href="<%= images_path(:id => @image.album_id) %>">Back to Album</a>
	</div>
	<div class="container" style="">
      <div class="card" style="min-width: 75%;margin:auto;border-style:solid;border-width:2px;padding:50px">
      	<div class="container" style="text-align: center">
	      	<% if @image.has_prev? %>
	      		<button type="button" class="btn btn-default btn-lg">
	      			<a class="glyphicon glyphicon-align-left" style="float:left;color:black;" href="<%= @image.prev_1 %>">< </a>
	      		</button>
	      	<% end %>
	      	<%= image_tag(@image.drawing_big) %>
	      	<% if @image.has_next? %>
				<button type="button" class="btn btn-default btn-lg">
	      			<a class="glyphicon glyphicon-menu-align-right" style="float:right;color:black;" href="<%= @next_image %>">></a>
	      		</button>
	      	<% end %>
      	</div>
      </div>

     
	 
	  <div class="container" style="width:100%;margin:auto;position:fixed;padding-top: 50px">
		  <p class="lead"><%= @image.title %></p>
		  <hr class="my-4" style="padding-left: 25px">
		  	<%= @image.body %>
		  </hr>
	  </div>
</div>

