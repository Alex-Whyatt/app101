<p id="notice"><%= notice %></p>

<div class="container" style="min-width: 80%;padding-top:200px;padding-left:75px;padding-bottom:100px;float:left;height:100%;margin: 0">
      <% @infos.each do  |info| %>
        <tr>
          <h2 class="display-4" style="font-family:GT Walsheim;float:left;padding-right: 50px">
          <%= info.title %> </h2>
          <div class="container" style="padding-top: 175px;padding-right: 50px">
            <div class="card" style="padding-bottom:100px;width: 30%;height:300px; border-outline: black;border-style:solid;border-width:4px;float:right">
            <% if info.avatar.attached? %>
              <div class="container" style="height:auto;width:auto">
                <%= image_tag(info.avatar_resized)%>
              </div>
            <% end %>
            </div>
            <div class="container" style="padding-top: 50px;width:60%;float:left">
              <p style="text-align: justify;font-family:GT Walsheim;">
                <%= info.bio %>
              </p>
              <br>
            </div>
          </div>
          <div class="container" style="float:left">
            <% if current_user && current_user.admin? %>
            <%= link_to 'Edit', edit_info_path(info), class: "btn btn-outline-primary" %>
            <% end %>
          </div>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>


</div>
