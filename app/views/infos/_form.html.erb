<div class="container" style="padding-top: 200px;height:100%;padding-left: 175px;width: auto">
	<%= simple_form_for(@info) do |f| %>
	  <%= f.error_notification %>
	  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

	  <div class="form-inputs">
	    <%= f.input :title %>
	  </div>
	  <br>
	  <div class="form-inputs">
	    <%= f.text_area :bio, :class => "form-control", :rows => 3 %>
	  </div>

	  <div class="field">
          <%= f.label :avatar, "Select a display image (Optional)" %>
          <%= f.file_field :avatar, multiple: false, direct_upload: true, include_blank: true, class: "form-control" %>
      </div>

	  <br>
	  <div class="form-actions">
	    <%= f.button :submit, class: "btn btn-outline-dark" %>
	  </div>
	  <br>

	  <%= link_to 'Show', @info %> |
<%= link_to 'Back', infos_path %>

	<% end %>
</div>