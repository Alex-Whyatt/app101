
<div class="container" style="min-width: 80%;padding-top:200px;padding-left:75px;float:left;height:50%;margin: 0">
  <h2>Log in</h2>
  <div class="card" style="max-width: 40%">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs" style="max-width: 40%;padding:25px ">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" }, class: "form-control" %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" }, class: "form-control" %>
      </div>
      <div class="container" style="padding: 25px">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-dark" %>
          <p>
        </div>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>